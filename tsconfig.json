{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@superapp/hooks": ["packages/hooks/src"],
      "@superapp/ui": ["packages/ui/src"],
      "@superapp/theme": ["packages/theme/src"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
